@model ViewModels.StudentEntityBindingViewModel

@{
    ViewBag.Title = "Actions";
}

<section class="title">
    <div class="container">
        <div class="heading">
            @if (Model.RollNumber > 0)
            {
                <h3>Update Form</h3>
            }
            else
            {
                <h3>Create Form</h3>
            }
        </div>
    </div>
</section>

<section class="section-3">
    <div class="container">
        <div>
            <form class="form" action="@Url.Action("Actions", "Student")" method="post" id="formValid">
                <div class="input-box">
                    <input type="hidden" name="ID" placeholder="Enter name" value="@Model.ID">
                </div>
                <div class="input-box">
                    <input type="hidden" name="RollNumber" placeholder="Enter name" value="@Model.RollNumber">
                </div>
                <div class="input-box">
                    <input type="text" name="Name" placeholder="Enter name" value="@Model.Name" required minlength="2" maxlength="50" />
                </div>
                <div class="input-box">
                    <input type="text" name="Class" placeholder="Enter Class" value="@Model.Class" required minlength="1" maxlength="20" />
                </div>
                <div class="input-box">
                    <input type="text" name="Gender" placeholder="Enter Gender" value="@Model.Gender" required minlength="1" maxlength="10" />
                </div>
                <div class="input-box">
                    <input type="text" name="Age" placeholder="Enter Age" value="@Model.Age" required />
                </div>
                <div class="input-box">
                    <input type="text" name="fees" placeholder="Enter Fees" value="@Model.Fees" required />
                </div>
                <div class="input-box">
                    <input type="text" name="City" placeholder="Enter City" value="@Model.City" required minlength="2" maxlength="50" />
                </div>
                <div class="input-box">
                    <input type="text" name="Address" placeholder="Enter Address" value="@Model.Address" required minlength="2" maxlength="100" />
                </div>
                <div class="input-box">
                    @*<input type="date" name="AddmissionSession"  value="@Model.AdmissionSession.ToString("yyyy-MM-dd")" />*@
                    @Html.TextBoxFor(m => m.AdmissionSession, "{0:yyyy-MM-dd}", new { type = "date", placeholder = "Enter Addmission Session" })
                </div>
                <div class="flex">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button class="btn btn-cancel" @Url.Action("StudentsListing", "Student")>Cancel</button>
                </div>
            </form>
        </div>
    </div>
</section>