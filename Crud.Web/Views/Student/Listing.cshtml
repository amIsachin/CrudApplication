@model IEnumerable<BusinessEntity.StudentEntity>

@{
    ViewBag.Title = "Listing";
}

<button id="toa">Click</button>


<section class="section-alert">
    <div class="container">
        <div class="alert alert-success flex justify-content align-items" id="alert-div">
            <div>
                <strong>Success!</strong> <span>Data has been Inserted successfuly</span>
            </div>
            <button type="button" id="alertButton"><i class="fa-solid fa-xmark"></i></button>
        </div>
    </div>
</section>

<section class="section-0">
    <div class="container">
        <div class="search-wrapper">
            <div class="search-box">
                <input type="text" class="focus" placeholder="Search">
                <button class="seperate clickShow"><i class="fa-solid fa-xmark"></i></button>
                <button><i class="fa-solid fa-magnifying-glass search"></i></button>
                <button class="btnCreate" id="createButton">Create</button>
            </div>
        </div>
    </div>
</section>

<section class="section-1">
    <div class="container">
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Fees</th>
                        <th>City</th>
                        <th>Task</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Gender</td>
                            <td>@student.Age</td>
                            <td>@student.Fees</td>
                            <td>@student.City</td>
                            <td>
                                <a class="editButton" data-id="@student.ID">Edit  <i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="deleteButton" data-id="@student.RollNumber">Delete  <i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        //--> Create Button functionality.
        $('#createButton').click(function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Create", "Student")',
                success: function (response) {
                    $('#actionContainer').html(response);
                    toastr.success("Data has been created successfuly", 'Success Alert', { timeout: 5000, 'closeButton': true })
                    focusAction('actionContainer');
                },
                error: function (error) {
                    console.warn(error);
                    swal("Oop's something went wrong !! " + error.status);
                }
            });
        });

        //--> Edit Button functionality.
        $('.editButton').click(function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Edit", "Student")',
                data: {
                    ID: $(this).attr('data-id')
                },
                success: function (response) {
                    $('#actionContainer').html(response);
                    focusAction('actionContainer');
                },
                error: function (error) {
                    swal("Oop's something went wrong !! " + error.status);
                }
            });
        });

        //--> Delete button functionality.
        $('.deleteButton').click(function () {
            swal("Are you sure you want to delete this student??", {
                buttons: {
                    defeat: "Cancel",
                    catch: {
                        text: "Delete",
                        value: "Delete"
                    },
                },
            })
                .then((value) => {
                    switch (value) {
                        case "Delete":
                            $.ajax({
                                type: 'POST',
                                url: '@Url.Action("Delete", "Student")',
                                data: {
                                    rollNumber: $(this).attr('data-id')
                                },
                                success: function (response) {
                                    swal("Student has been deleted successfuly!!");
                                },
                                error: function (error) {
                                    swal("Oops something went wrong !!" + error.status);
                                }
                            })
                            break;

                        case "defeat":
                            break;

                        default:
                            swal("Perform unnecessary action!");
                    }
                });

        });

        //--> Testing Area.
        $('#toa').click(function () {
            toastr.success("Data has been created successfuly", 'Success Alert', { timeout: 5000, 'closeButton': true })
        })

        //--> Please dont touch this line of code without consdering the rest of the code.
        $('.focus').on({
            keydown: function () {
                $('.clickShow').css('display', 'block')
            }
        });

        $('.clickShow').click(function () {
            $('.clickShow').css('display', 'none')
        });

        //  **Alert related code.
        $('#alertButton').click(function () {
            $('#alert-div').css('display', 'none');
        });

    });  //--> Here is close document ready function().
</script>

