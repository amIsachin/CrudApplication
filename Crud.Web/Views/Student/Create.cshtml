
@{
    ViewBag.Title = "Create";
}

<section class="section-3">
    <div class="container">
        <div>
            <form class="form" id="studentFormSerialize">
                <div class="input-box">
                    <input type="text" name="Name" placeholder="Enter name">
                </div>
                <div class="input-box">
                    <input type="text" name="Class" placeholder="Enter Class">
                </div>
                <div class="input-box">
                    <input type="text" name="Gender" placeholder="Enter Gender">
                </div>
                <div class="input-box">
                    <input type="text" name="Age" placeholder="Enter Age">
                </div>
                <div class="input-box">
                    <input type="text" name="fees" placeholder="Enter Fees">
                </div>
                <div class="input-box">
                    <input type="text" name="City" placeholder="Enter City">
                </div>
                <div class="input-box">
                    <input type="text" name="Address" placeholder="Enter Address">
                </div>
                <div class="input-box">
                    <input type="text" name="AddmissionSession" placeholder="Enter Addmission Session">
                </div>
                <div class="flex">
                    <button class="btn btn-primary" id="saveStudent">Save</button>
                    <button class="btn btn-cancel">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        //--> Save Student functionality.
        $('#saveStudent').click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Create", "Student")'
            });
        });

    });  //--> Here is close document ready function();
</script>