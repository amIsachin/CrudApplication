                    <div class="swiper-slide thin-border-right"> <a href="#"><img src="~/Content/ThemeMaterial/Assets/R.png" alt="logo"></a> </div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </section>
    </div>
</main>


<script>
    $(document).ready(function () {
        $('.pagination').click(function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Courses", "University")',
                data: {
                    clicked: $('#click').attr('data-click'),
                    pageNo: $('#click').attr('data-pageNo')
                },
                success: function (response) {
                    //window.location.reload();
                },
                error: function (error) {
                    swal("Oops something went wrong !!" + error.status);
                }


            })
        })
    });
</script>