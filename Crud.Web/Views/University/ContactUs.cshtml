
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- font awesome CDN link come from this URL https://cdnjs.com/libraries/font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="~/Content/ThemeMaterial/Css/Application.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    <title>SignIn</title>
</head>
<body>
    <section class="section-login">
        <div class="login-container account">
            <div class="heading mt-1">
                <h2 class="section-heading">Contact Us</h2>
            </div>
            <form>
                <div class="login-wrapper">
                    <div>
                        <label class="display-block">Enter Name</label>
                        <i class="fa-solid fa-at"></i><input type="text" placeholder="Type your name" class="mb-2" name="Email" />
                    </div>
                    <div>
                        <label class="display-block">Enter phone number</label>
                        <i class="fa-solid fa-phone"></i><input type="number" placeholder="Type your password" class="mb-2" name="Password" />
                    </div>

                    <div>
                        <label class="display-block">Your query</label>
                        <i class="fa-solid fa-clipboard-question"></i><input type="text" placeholder="Type your query" class="mb-2" name="query" />
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn" id="attempClick">Submit</button>
                    </div>
                </div>
            </form>

        </div>
    </section>


    <!--  **Sweet Alert CDN link come from this url https://sweetalert.js.org/guides/ -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>


<script>
    $(document).ready(function () {
        $('#attempClick').click(function () {
            swal("You query has been submited!");
            setTimeout(function () {
                window.location.href = '@Url.Action("Index", "University")'
            }, 3000)

        })
    })

</script>